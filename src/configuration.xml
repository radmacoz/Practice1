<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties resource="db.properties" />
	<typeAliases>
		<typeAlias alias="member" type="pandora.model.Member" />
	 	<typeAlias alias="fileup" type="pandora.model.FileUp"/>
		<typeAlias alias="download" type="pandora.model.Download"/>
		<typeAlias alias="charge" type="pandora.model.Charge"/>
		<typeAlias alias="req_board" type="pandora.model.Req_Board"/>
	<!--	<typeAlias alias="charge_op" type="pandora.model.Charge_option"/>  -->
	</typeAliases>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="member.xml" />
		<mapper resource="fileup.xml" />
		<mapper resource="download.xml" />
		<mapper resource="charge.xml" />
		<mapper resource="req_board.xml" /> 
	<!-- 		<mapper resource="charge_op.xml" /> -->
	</mappers>
</configuration>